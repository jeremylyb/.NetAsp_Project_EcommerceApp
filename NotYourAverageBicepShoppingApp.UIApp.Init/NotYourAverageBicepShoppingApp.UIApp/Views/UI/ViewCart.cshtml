@model NotYourAverageBicepShoppingApp.UIApp.Models.CartDetailsDTO;
@{

    ViewData["Title"] = "User Cart";
}



<h1>Cart Items Total Price: @Model.Cart.CartPrice</h1>

<br />

<a asp-controller="UI" asp-action="AllProducts">Return back to All Products!</a>
<br />

<a asp-controller="UI" asp-action="DeleteAllProductsFromCart">Remove all items in Cart!</a>
<br />

<a asp-controller="UI" asp-action="NewOrderBefore">Time to Checkout!</a>

<br />

<h1>Cart Records</h1>

@foreach (var cartItem in Model.CartItemsWithProducts)
{
    <p>ProductId: @cartItem.Product.ProductId</p>
    <p>ProductId: @cartItem.Product.ProductName</p>
    <p>ProductPrice: @cartItem.Product.ProductPrice</p>

    <a asp-controller="UI" asp-action="DeleteProductFromCart" asp-route-productId="@cartItem.Product.ProductId">Remove Product from Cart</a>
    <hr />
}